<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Calculator</title>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
<link rel="stylesheet" href="styles.css" type="text/css">

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
<script src='script.js' type="text/javascript"></script

<% include ../partials/navbar %>
<h1 class="heading">Daily Compound Interest Calculator</h1>

<div class="compound-calculator">
  <label class="compound-label" for="startingAmount"><strong>Initial Purchase Amount</strong></label>
  <input class="initialPurchaseAmount" type="text" value="$100" id="startingAmount" placeholder="$" maxlength="12">
  <label class="compound-label" for="interestRate"><strong>Daily Interest Rate in Percentage</strong></label>
  <input class="rateOfInterest" type="text" value="1" id="interestRate" placeholder="%" maxlength="8">
  <label class="compound-label" for="numberOfDays"><strong>Length of Term (in days)</strong></label>
  <input class="amountOfDays" type="text" value="12" id="numberOfDays" placeholder="Days" autocomplete="off" maxlength="18">
  <label class="compound-label" for="reinvestRate"><strong>Daily Reinvest Rate</strong></label>
  <select class="rateOfReinvest" id="reinvestRate">
    <option value="0">0%</option>
    <option value="5">5%</option>
    <option value="10">10%</option>
    <option value="15">15%</option>
    <option value="20">20%</option>
    <option value="25">25%</option>
    <option value="30">30%</option>
    <option value="35">35%</option>
    <option value="40">40%</option>
    <option value="45">45%</option>
    <option value="50" selected="">50%</option>
    <option value="55">55%</option>
    <option value="60">60%</option>
    <option value="65">65%</option>
    <option value="70">70%</option>
    <option value="75">75%</option>
    <option value="80">80%</option>
    <option value="85">85%</option>
    <option value="90">90%</option>
    <option value="95">95%</option>
    <option value="100">100%</option>
  </select>
  <label class="compound-label" for="includingWeekends"><strong>Include Weekends</strong></label>
  <select class="weekendsIncluded" id="includingWeekends">
    <option value="yes">Yes</option>
    <option value="no">No</option>
  </select>
  <div class="compound-buttons">
    <button class="reset-btn" data-reset type="button">Reset Values</button>
    <button class="calc-btn" data-compound type="button">Calculate Now</button>
  </div>

</div>

<div class="compound-info">
  <div class="compound-summary">
    <h3 style="margin-top: 10px;">Compound Summary:</h3>
    <ul class="compound-summary-list">
    </ul>
  </div>

  <div class="compound-plan">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Day</th>
          <th scope="col">Date</th>
          <th scope="col">Earnings</th>
          <th scope="col">Reinvest</th>
          <th scope="col">(Principal/Cash Out)</th>
          <th scope="col">TOTAL Principal</th>
          <th scope="col">TOTAL Cash</th>
        </tr>
      </thead>
      <tbody id="compound-plan-body">

      </tbody>
    </table>
    <input type="button" id="firstButton" value="first" />
    <input type="button" id="nextButton" value="next" />
    <input type="button" id="previousButton" value="previous" />
    <input type="button" id="lastButton" value="last" />
  </div>
</div>
